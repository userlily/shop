  <script src="/admin/js/back.js"></script>
</body>
</html>


      <script>
          $("#input-id").fileinput({

              language:"zh",//中文
              showUpload:false, //不显示uplode
              allowedFileExtensions: ['jpg', 'png', 'gif'], //支持的后缀名
              initialPreviewAsData: true,
          });
          $("#imgjm").fileinput({

              language:"zh",//中文
              allowedFileExtensions: ['jpg', 'png', 'gif'], //支持的后缀名
              initialPreviewAsData: true,
          });



          $("#addColor").click(function(){

             var addColor= $("#colorText").val();
             var $laber=    $("<label>" +
                               "<input type='checkbox' name='color' value="+ addColor+" checked  class='hidden'> " +addColor+
                              " </label>");
               $("#checkbox").append($laber)
               $("#colorText").val("");
               $("#close").click()

          })
          $("#dele").click(function () {
              $("#checkbox").empty();
          })
          $("#colorText").keydown(function (e) {

              if( e.keyCode==13){
                  $("#addColor").click()
              }


          })



          $("#addColor1").click(function(){

              var addColor= $("#colorText1").val();
              var $laber=    $("<label>" +
                  "<input type='checkbox' name='shuxing' value="+ addColor+" checked  class='hidden'> " +addColor+
                  " </label>");
              $("#checkbox1").append($laber)
              $("#colorText1").val("");
              $("#close1").click()

          })
          $("#dele1").click(function () {
              $("#checkbox1").empty();
          })
          $("#colorText1").keydown(function (e) {

              if( e.keyCode==13){
                  $("#addColor1").click()
              }


          })

  </script>




